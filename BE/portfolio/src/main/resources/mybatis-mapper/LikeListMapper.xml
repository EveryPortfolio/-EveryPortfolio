<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.everyportfolio.portfolio.mapper.LikeListMapper">
    <select id="selectLikeCountByTableId" resultType="int">
        SELECT COUNT(*) FROM LIKE_LIST WHERE TABLE_ID = #{tableId}
    </select>
    <select id="selectLikeCountByTableIdAndUserId" resultType="int">
        SELECT COUNT(*) FROM LIKE_LIST WHERE TABLE_ID = #{tableId} AND USER_ID = #{userId}
    </select>
    <insert id="insertLikeList">
        INSERT INTO LIKE_LIST (TABLE_ID, USER_ID) VALUES (#{tableId}, #{userId})
    </insert>
    <delete id="deleteLikeListByTableIdAndUserId">
        DELETE FROM LIKE_LIST WHERE TABLE_ID = #{tableId} AND USER_ID = #{userId}
    </delete>
</mapper>